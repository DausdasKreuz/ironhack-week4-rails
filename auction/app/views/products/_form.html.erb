<%= form_for [@user, @product] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :deadline %>
  <%= f.date_field :deadline %>
  <br>

  <%= f.button %>
  <%= link_to "Cancel", user_products_path %>
<% end %>
